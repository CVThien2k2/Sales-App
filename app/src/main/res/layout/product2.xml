<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:id="@+id/cardview2"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/anhsanpham2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/design_default_color_on_secondary"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tensanpham2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"></TextView>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/giasanpham2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#F40000"
                android:textSize="13dp"
                android:text="Giá:  250.000 đ - Lượt bán: 3000 lượt. "></TextView>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>