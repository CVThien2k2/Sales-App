<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#EFCFCF"
    tools:context=".activity.ProductdetailsActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarchitiet"
        android:background="#813F3F"
        app:title="Chi tiết sản phẩm"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tenchitiet"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:text="Tên sản phẩm"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            ></TextView>
        <ImageView
            android:id="@+id/imagechitiet"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"></ImageView>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"

            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            >
            <TextView

                android:layout_width="0dp"
                android:textColor="#D30404"
                android:layout_weight="2"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Đã bán: "
                android:textSize="20dp"></TextView>
            <TextView
                android:id="@+id/dabanchitiet"
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:layout_weight="3"

                android:layout_height="wrap_content"
                android:text="3000 lượt"
                android:textSize="20dp"></TextView>
            <TextView
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_weight="2.5"
                android:textColor="#D30404"
                android:layout_height="wrap_content"
                android:text="Đánh giá: "
                android:textSize="20dp"></TextView>
            <TextView
                android:id="@+id/danhgiachitiet"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="5/5 đ."
                android:textSize="20dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"

            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            >
            <TextView

                android:layout_width="0dp"
                android:textColor="#D30404"
                android:layout_weight="4"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Giá sản phẩm: "
                android:textSize="20dp"></TextView>
            <TextView
                android:id="@+id/giachitiet"
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:layout_weight="6"

                android:layout_height="wrap_content"
                android:text="300.000 đ"
                android:textSize="20dp"></TextView>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="4">

            <TextView
                android:id="@+id/motachitiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả sản phẩm: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal">
        <Button
            android:id="@+id/themgiohang"
            android:layout_width="0dp"
            android:layout_weight="4.8"
            android:text="Thêm vào giỏ hàng"
            android:layout_height="match_parent"></Button>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"></LinearLayout>
        <Button
            android:id="@+id/muangay"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_weight="4.8"
            android:text="Mua ngay"
            android:layout_height="match_parent"></Button>

    </LinearLayout>


</LinearLayout>