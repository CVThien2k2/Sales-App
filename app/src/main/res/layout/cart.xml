<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/cart">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/imagecart"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/design_default_color_on_secondary"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namecart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Tên sản phẩm"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/giacart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Giá:  250.000 đ - Lượt bán: 3000 lượt. "
                android:textColor="#F40000"
                android:textSize="13dp"></TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Số lượng"
                android:textColor="#0B0A0A"
                android:textSize="13dp"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <Button
                    android:id="@+id/giam"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_gravity=""

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:text="-"
                    android:textSize="30dp"></Button>

                <TextView
                    android:id="@+id/soluong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="30dp"></TextView>

                <Button
                    android:id="@+id/tang"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_gravity=""
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:text="+"
                    android:textSize="30dp"></Button>

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="13dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>